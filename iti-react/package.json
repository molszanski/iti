{
  "name": "iti-react",
  "version": "0.4.0-next.0",
  "description": "Handy React bindings for iti",
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/iti-react.cjs",
    "default": "./dist/iti-react.modern.js"
  },
  "main": "./dist/iti-react.cjs",
  "module": "./dist/iti-react.module.js",
  "typings": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf ./dist && microbundle -o dist/  --jsx React.createElement",
    "dev": "microbundle watch -o dist/ --jsx React.createElement",
    "test": "yarn tsd",
    "jestWatch": "jest --watch --verbose",
    "tsd": "tsd tsd_project",
    "prepare-not": "install-peers"
  },
  "dependencies": {
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.4",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.40",
    "install-peers-cli": "^2.2.0",
    "iti": "0.4.0-next.0",
    "jest": "^27.4.7",
    "microbundle": "^0.14.2",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3",
    "tsd": "^0.19.1",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": "^17.0.2"
  },
  "repository": "https://github.com/molszanski/iti",
  "author": "Nick Olszanski",
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "trailingComma": "all"
  }
}
